        "summary": "Retrieves all available categories in the catalog ",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "200 OK",
            "examples": {
              "application/json": [
                {
                  "categories": [
                    "Watches"
                  ],
                  "_id": "5e2a45c2a55e70a2b32c03ce",
                  "itemId": "3",
                  "itemName": "Sports Watch 11",
                  "price": 99,
                  "currency": "USD"
                },
                {
                  "categories": [
                    "Watches",
                    "Sports Watches"
                  ],
                  "_id": "5e2a45c2a55e70a2b32c03cf",
                  "itemId": "9",
                  "itemName": "Sports Watch 4",
                  "price": 100,
                  "currency": "EUR"
                }
              ]
            }
          },
          "404": {
            "description": "404 Not Found"
          },
          "500": {
            "description": "500 Internal Server Error"
          }
        }
      },
      "post": {
        "operationId": "saveItemPost",
        "summary": "Saves or updates an item.",
        "parameters": [
          {
            "in": "query",
            "name": "itemId",
            "required": true,
            "type": "string",
            "description": "Item's ID"
          },
          {
            "in": "query",
            "name": "itemName",
            "required": true,
            "type": "string",
            "description": "Item's Name"
          },
          {
            "in": "query",
            "name": "price",
