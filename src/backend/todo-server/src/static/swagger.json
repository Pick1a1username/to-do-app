            "type": "number",
            "description": "Item's Price"
          },
          {
            "in": "query",
            "name": "currency",
            "required": true,
            "type": "string",
            "description": "Item's Currency"
          },
          {
            "in": "query",
            "name": "categories",
            "required": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Item's categories"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "200 if the item has been updated",
            "examples": {
              "application/json": { 
                "itemId" : 23,
                "itemName" : "Sports Watch 10",
                "price" : "100",
                "currency" : "USD",
                "categories" : [ 
                   "Watches",
                   "Sports Watches"
                ]
              }
            }
          },
          "201": {
            "description": "200 if the item has been created",
